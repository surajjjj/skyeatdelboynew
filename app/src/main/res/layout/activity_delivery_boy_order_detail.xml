<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DelivaryBoy.DeliveryBoyOrderDetailActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_arrow_back_24">

                </ImageView>

                <TextView
                    android:id="@+id/txtSaleId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.9dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="15dp"
                android:background="#EF4009">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                android:weightSum="5">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/txtAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="gfffffffffdjgdfjuhuidhgkjfhuiseyryiujfgmdjhdsfjmcmvjkfhkjgjfjgkhruiyuykuhjcxcjkhfkdhufyuhkjhfxjkghkahjgfhjk"
                        android:textColor="#9F9D9D"
                        android:textSize="12sp"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/txtAddtwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="gfffffffffdjgdfjuhuidhgkjfhuiseyryiujfgmdjhdsfjmcmvjkfhkjgjfjgkhruiyuykuhjcxcjkhfkdhufyuhkjhfxjkghkahjgfhjk"
                        android:textColor="#9F9D9D"
                        android:textSize="12sp"
                        android:textStyle="bold">
                    </TextView>

                </LinearLayout>
                <ImageView
                    android:id="@+id/imgLocation"

                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:tint="@color/colorGreen"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/direction">

                </ImageView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.9dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="15dp"
                android:background="#EF4009">
            </View>

            <TextView
                android:id="@+id/txtOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="On Route"
                android:textColor="#EF4009"
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layputn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:src="@drawable/userm">

                </ImageView>

                <TextView
                    android:id="@+id/txtUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_weight="2"

                    android:textColor="#4E4949"
                    android:textSize="14sp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:id="@+id/imgUserPhoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:src="@drawable/baseline_call_24"
                    app:tint="#ff471a"></ImageView>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:src="@drawable/man">

                </ImageView>

                <TextView
                    android:id="@+id/txtDBoyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_weight="2"
                    android:textColor="#4E4949"
                    android:textSize="14sp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:tint="#ff471a"

                    android:src="@drawable/baseline_call_24">
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hotel"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:src="@drawable/restaurant">

                </ImageView>

                <TextView
                    android:id="@+id/txtHotelName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_weight="2"
                    android:textColor="#4E4949"
                    android:textSize="14sp"
                    android:textStyle="bold">

                </TextView>

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:tint="#ff471a"

                    android:src="@drawable/baseline_call_24">

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/lstItem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp">
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/dotted_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_weight="3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Item Total"
                    android:layout_weight="1"
                    android:textColor="#837E7E"
                    android:textSize="11sp"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:id="@+id/txtItemTotal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="#837E7E"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textAlignment="center">
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_weight="3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Delivery Fee"
                    android:layout_weight="1"
                    android:textColor="#837E7E"
                    android:textSize="11sp"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:id="@+id/txtDeliveryFee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="#837E7E"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textAlignment="center">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_weight="3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Store Charge"
                    android:layout_weight="1"
                    android:textColor="#837E7E"
                    android:textSize="11sp"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:id="@+id/txtStoreCharge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="#837E7E"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textAlignment="center">
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_weight="3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tax and Charge"
                    android:layout_weight="1"
                    android:textColor="#837E7E"
                    android:textSize="11sp"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:id="@+id/txtTax"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="#837E7E"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textAlignment="center">
                </TextView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="#dfdfdf">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_weight="3">
                <TextView
                    android:id="@+id/txtPaymentType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#5A5656"
                    android:textSize="13sp"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:id="@+id/txtAllTotal"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="#5A5656"
                    android:textSize="11sp"
                    android:textStyle="bold">
                </TextView>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="#dfdfdf">
            </View>

            <LinearLayout
android:visibility="gone"
                android:id="@+id/cashpay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_weight="3">
                <TextView
                    android:id="@+id/txtcashsee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#5A5656"
                    android:text="Total Cash Pay"
                    android:textSize="17sp"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:id="@+id/txttcashdetaails"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="#5A5656"
                    android:textSize="17sp"
                    android:textStyle="bold">
                </TextView>


            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="This Field mandatory is madanotory ****"
                android:textColor="#5A5656"
                android:textSize="11sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/cashpricelayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
               >
                <EditText
                    android:inputType="number"
                    android:id="@+id/edcashpayment"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textColor="#5A5656"

                    android:hint="Enter Pay Hotel Price"
                    android:textSize="13sp"
                    android:textStyle="bold">
                </EditText>
                <EditText
                    android:id="@+id/edcashpaymentreason"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Enter cash Details"
                    android:textColor="#5A5656"
                    android:textSize="13sp"
                    android:textStyle="bold">
                </EditText>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_marginTop="30dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/btnAccept"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:background="#ff471a"
                    android:fontFamily="@font/gilroyblack"
                    android:gravity="center"
                    android:text="Accept"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/btnReject"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="Reject"
                    android:textSize="17sp"
                    android:layout_marginEnd="1dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="#BF1313">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linLayoutCancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/txtCancelOrder"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="#BF1313"
                    android:fontFamily="@font/gilroyblack"
                    android:gravity="center"
                    android:text="Cancel Order"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="19dp"
                    android:textStyle="bold"></TextView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linLayoutPickUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/txtPickUp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@color/colorBalck"
                    android:fontFamily="@font/gilroyblack"
                    android:gravity="center"
                    android:text="Pickup Order"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="19dp"
                    android:textStyle="bold"></TextView>


            </LinearLayout>

            <LinearLayout

                android:id="@+id/linLayoutPickUpdelivery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/txtPickUpdelivery"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@color/colorBalck"
                    android:fontFamily="@font/gilroyblack"
                    android:gravity="center"
                    android:text="Pickup Order"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="19dp"
                    android:textStyle="bold"></TextView>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/linLayoutDeliver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/txtDeliver"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="#095C0C"
                    android:fontFamily="@font/gilroyblack"
                    android:gravity="center"
                    android:text="Delivered"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="19dp"
                    android:textStyle="bold"></TextView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>